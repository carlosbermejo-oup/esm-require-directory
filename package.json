{
  "name": "esm-require-directory",
  "version": "2.6.6",
  "description": "Require a directory of modules in a similar way to esm-import-directory",
  "type": "commonjs",
  "main": "./index.js",
  "exports": {
    "import": "./index.mjs",
    "require": "./index.js"
  },
  "scripts": {
    "test": "run-s test-cjs test-esm",
    "test-cjs": "mocha test/spec/**/*.test.js",
    "test-esm": "nvs 14 mocha test/spec/**/*.test.mjs",
    "compat-cjs": "nvs 14,12,10,8,6,4,0.12,0.10,0.8 mocha-compat test/spec/**/*.test.js",
    "compat-esm": "nvs 14 mocha test/spec/**/*.test.mjs",
    "compat": "run-s compat-cjs compat-esm",
    "lint": "eslint . --ext js,mjs",
    "format": "prettier --write '**/*.{js,mjs}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmalakoff/esm-require-directory.git"
  },
  "keywords": [
    "esm",
    "require",
    "directory",
    "import",
    "esm-import-directory",
    ".js",
    ".mjs"
  ],
  "author": "Kevin Malakoff",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kmalakoff/esm-require-directory/issues"
  },
  "homepage": "https://github.com/kmalakoff/esm-require-directory#readme",
  "dependencies": {
    "fs-iterator": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lodash.size": "^4.2.0",
    "mocha": "^7.1.2",
    "mocha-compat": "^3.5.5",
    "nave": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "nvs": "^0.1.8",
    "prettier": "^2.0.5"
  }
}
